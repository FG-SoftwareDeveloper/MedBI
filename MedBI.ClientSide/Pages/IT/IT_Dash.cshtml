@page
@model MedBI.ClientSide.Pages.IT.IT_DashModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}

<!-- Dashboard Grid -->
<div class="container-fluid py-3">

    <!-- Dashboard Cards -->
    <div class="row g-3">
        <div class="col-6 col-md-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Tickets</h5>
                    <p class="display-6">24</p>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-white bg-danger h-100">
                <div class="card-body">
                    <h5 class="card-title">New Tickets</h5>
                    <p class="display-6">8</p>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Open Tickets</h5>
                    <p class="display-6">23</p>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-white bg-dark h-100">
                <div class="card-body">
                    <h5 class="card-title">Closed Tickets</h5>
                    <p class="display-6">4</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm p-3">
            <h5>Recent Claims</h5>
            <p>Summary of your most recent activity.</p>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm p-3">
            <h5>System Alerts</h5>
            <p>No critical alerts. Systems are operational.</p>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card shadow-sm p-3">
            <h5>Next Steps</h5>
            <p>Review new tickets or manage user access logs.</p>
        </div>
    </div>
    <!-- Recent Tickets Table -->
    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">Recent Tickets</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Updated</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Printer not working</td>
                        <td>2025-06-20 10:15 AM</td>
                        <td><span class="badge bg-success">Open</span></td>
                        <td><a class="btn btn-sm btn-outline-primary">View</a></td>
                    </tr>
                    <tr>
                        <td>VPN Access Request</td>
                        <td>2025-06-19 02:35 PM</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td><a class="btn btn-sm btn-outline-primary">View</a></td>
                    </tr>
                    <tr>
                        <td>Email sync issue</td>
                        <td>2025-06-18 05:20 PM</td>
                        <td><span class="badge bg-danger">Urgent</span></td>
                        <td><a class="btn btn-sm btn-outline-primary">View</a></td>
                    </tr>
                    <tr>
                        <td>Software install</td>
                        <td>2025-06-17 11:00 AM</td>
                        <td><span class="badge bg-secondary">Closed</span></td>
                        <td><a class="btn btn-sm btn-outline-primary">View</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

